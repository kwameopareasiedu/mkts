body {
    --primary-color: hsl(16, 88%, 70%);
    --primary-color-dark: hsl(16, 88%, 63%);
    --primary-color-light: hsl(16, 100%, 73%);
    --secondary-color: hsl(160, 5%, 88%);
    --secondary-color-dark: hsl(72, 6%, 83%);
    --gray-color: hsl(208, 7%, 46%);
    --text-color: hsl(0, 0%, 40%);
    --error-color: hsl(0, 60%, 50%);

    // The variables below are defined by the react-simple-widgets UI library
    // For more information, see https://github.com/kwameopareasiedu/react-simple-widgets#theming
    --rsw-primary-color: var(--primary-color);
    --rsw-label-color: var(--text-color);
}
