body {
    .flex-1-1 {
        flex: 1 1 !important;
    }

    .grid-center {
        display: grid;
        place-items: center;
    }

    .primary-color {
        color: var(--primary-color) !important;
    }

    .primary-color-dark {
        color: var(--primary-color-dark) !important;
    }

    .error-color {
        color: var(--error-color) !important;
    }

    .no-hover-decoration:hover {
        text-decoration: none;
    }

    .hover-pointer-cursor:hover {
        cursor: pointer;
    }
}
