@import "./config";
@import "./utils";
@import "./status";

* {
    color: var(--text-color);
}

*::-webkit-scrollbar {
    width: 10px;
    height: 10px;
}

*::-webkit-scrollbar-thumb {
    background: var(--primary-color);
}

html,
body,
#root {
    height: 100vh;
    font-family: "Cabin Condensed", sans-serif;
}

body {
    .container {
        margin-left: auto;
        margin-right: auto;

        @media screen and(min-width: 576px) {
            max-width: 480px;
        }

        @media screen and(min-width: 768px) {
            max-width: 640px;
        }

        @media screen and(min-width: 992px) {
            max-width: 720px;
        }

        @media screen and(min-width: 1200px) {
            max-width: 960px;
        }
    }

    .w-360 {
        max-width: 360px;
    }

    .w-480 {
        max-width: 480px;
    }

    .w-640 {
        max-width: 640px;
    }

    .w-720 {
        max-width: 720px;
    }

    .image-container {
        overflow: hidden;

        img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
    }

    .image-container.contain {
        img {
            object-fit: contain;
        }
    }

    .image-container.round {
        border-radius: 50%;
    }

    /***************************************************************/
    /************************** OVERRIDES **************************/
    /***************************************************************/
    label {
        color: hsl(225, 6%, 40%);
        margin-bottom: 4px;
    }

    input,
    select,
    textarea,
    .form-input input,
    .form-input select,
    .form-input textarea {
        border-radius: 4px;
    }

    select {
        background: none;
    }

    .btn-upper {
        text-transform: uppercase;
    }

    .btn-primary {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
    }

    .btn-primary:focus,
    .form-control:focus {
        box-shadow: none;
        border: 2px solid var(--primary-color);
    }

    .btn-primary:hover,
    .btn-primary:not(:disabled):not(.disabled):focus,
    .btn-primary:not(:disabled):not(.disabled):active {
        background-color: var(--primary-color-dark);
        border-color: var(--primary-color-dark);
    }

    .btn-primary:disabled {
        background-color: var(--primary-color-dark);
        border-color: var(--primary-color-dark);
        opacity: 0.5;
    }

    .btn-outline-primary {
        border-color: var(--primary-color-dark);
    }

    .btn-outline-primary:focus {
        box-shadow: none;
        border: 2px solid var(--primary-color-dark);
    }

    .btn-outline-primary:hover {
        background-color: var(--primary-color-dark);
        border-color: var(--primary-color-dark);
    }

    .btn-sm {
        font-size: 85%;
        padding: 2px 10px;
    }

    .card .card-body {
        padding: 25px;
    }

    .card.floating-card {
        border: none;
        box-shadow: 2px 2px 10px hsl(0, 0%, 75%);
        transition: box-shadow 0.3s;
    }

    .card.floating-card-action:hover {
        box-shadow: 4px 4px 10px hsl(0, 0%, 75%);
    }
}
