{
    "name": "<%= projectName %>",
    "version": "0.1.0",
    "description": "",
    "author": "",
    "license": "MIT",
    "scripts": {
        "build-server": "tsc -p src/server --sourceMap",
        "watch-server": "tsc --watch --preserveWatchOutput --sourceMap -p src/server",
        "build-lib-dev": "webpack --mode development --devtool inline-source-map --config webpack.lib.js",
        "build-lib-prod": "webpack --mode production --config webpack.lib.js",
        "build-client-dev": "webpack --watch --mode development --devtool inline-source-map --config webpack.common.js",
        "build-client-prod": "webpack --mode production --config webpack.common.js",
        "run-postbuild": "node postbuild.js",
        "run-server": "nodemon -r dotenv/config dist/server/app.js",
        "dev": "yarn build-server && yarn build-lib-dev && concurrently \"yarn watch-server\" \"yarn run-server\" \"yarn build-client-dev\"",
        "build": "yarn build-server && yarn build-lib-prod && yarn build-client-prod && yarn run-postbuild",
        "start-node": "node dist/server/app.js",
        "start": "node -r dotenv/config dist/server/app.js"
    }
}
