{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES5",
        "rootDir": "./src",
        "outDir": "./dist/",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "jsx": "react"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "bin"]
}
